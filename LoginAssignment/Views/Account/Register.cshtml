@model LoginAssignment.Models.RegisterModel
@{ Layout = "~/Views/Shared/_LoginLayout.cshtml"; }
<h1>Registration</h1>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @*@Html.ValidationSummary()*@
        <div class="form-group">
            <label style="color:red;">*</label>   @Html.LabelFor(x => x.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Username)
                @*@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            <label style="color:red;">*</label> @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.Password)
                @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-primary" />
                @Html.ActionLink("Login", "Login","Account",null, new { @class = "btn btn-dark" })

                @*<input type="button" value="Login" />*@
            </div>
        </div>
       
    </div>
}

